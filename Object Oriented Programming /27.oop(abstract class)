
// Employee Salary System
#include <iostream>
using namespace std;
class Employee {
public:
    virtual void calculateSalary() = 0;     // pure virtual
    virtual void displayInfo() {            // non-pure virtual
        cout << "Displaying employee info..." << endl;
    }
};
class FullTimeEmployee : public Employee {
    int monthlySalary;
public:
    FullTimeEmployee(int sal) : monthlySalary(sal) {}

    void calculateSalary() override {
        cout << "Full-Time Salary: " << monthlySalary << endl;
    }
};
class PartTimeEmployee : public Employee {
    int hours;
    int ratePerHour;
public:
    PartTimeEmployee(int h, int r) : hours(h), ratePerHour(r) {}

    void calculateSalary() override {
        cout << "Part-Time Salary: " << hours * ratePerHour << endl;
    }
};

//Function using Polymorphism
void processEmployees(Employee* arr[], int size) {
    for (int i = 0; i < size; i++) {
        arr[i]->displayInfo();
        arr[i]->calculateSalary();
        cout << "------------------\n";
    }
}

int main() {
    // heap method
    Employee* e1 = new FullTimeEmployee(50000);
    Employee* e2 = new PartTimeEmployee(40, 500);
    Employee* e3 = new PartTimeEmployee(20, 300);
    Employee* e4 = new FullTimeEmployee(70000);


    Employee* list[4] = { e1, e2, e3, e4 };

    processEmployees(list, 4);


    delete e1;
    delete e2;
    delete e3;
    delete e4;

    return 0;
}
