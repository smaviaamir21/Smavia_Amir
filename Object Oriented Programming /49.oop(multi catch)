#include <iostream>
using namespace std;

int main() {
    int x;
    cout << "Enter Value: ";
    cin >> x;

    try {
        // Check if x is 0
        if (x == 0) {
            throw x;  // Throw an integer when x is 0
        }
        // Check if x is 100
        if (x == 100) {
            throw 'e';  // Throw a char when x is 100
        }
        // Check if x is 1000
        if (x == 1000) {
            throw 5.5f;  // Throw a float when x is 1000
        }
    }
    catch (int x) {
        cout << "Value of x is zero" << endl;  // Catches integer exceptions
    }
    catch (char x) {
        cout << "Value of x is char" << endl;  // Catches char exceptions
    }
    catch (float x) {
        cout << "Value of x is float" << endl;  // Catches float exceptions
    }

    return 0;
}
