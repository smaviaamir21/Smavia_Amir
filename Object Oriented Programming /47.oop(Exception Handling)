#include <iostream>
#include <string> 
using namespace std;

int main() {
    int number;

    cout << "Enter a positive number: ";
    cin >> number;

    try {
        if (number < 0) {
            throw string("Negative number entered!"); // Throwing a string
        }
        cout << "You entered: " << number << endl;
    }
    catch (string errorMessage) { // Catching a string
        cout << "Error: " << errorMessage << endl;
    }

    return 0;
}
