#include <iostream>
using namespace std;

class Number {
private:
    int value;

public:
    Number(int val) : value(val) {}

    Number operator+(const Number& n) {
        return Number(value + n.value); 

    }
    void display() const {
        cout << "Value: " << value << endl;
    }
};

int main() {
    Number num1(10);  
    Number num2(20);  

    Number num3 = num1 + num2;  

    num1.display();  
    num2.display(); 
    num3.display();  

    return 0;
}
