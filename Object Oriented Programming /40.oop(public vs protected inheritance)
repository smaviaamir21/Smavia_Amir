#include <iostream>
using namespace std;
class Employee {
protected:
    int empID;
    string name;
private:
    double baseSalary;
public:
    Employee(int id, string n, double salary) {
        empID = id;
        name = n;
        baseSalary = salary;
    }
    void showSalary() {
        cout << "Base Salary: " << baseSalary << endl;
    }
};
// Derived class – Public Inheritance
class Manager : public Employee {
private:
    double bonus;
public:
    Manager(int id, string n, double salary, double b)
        : Employee(id, n, salary) {
        bonus = b;
    }
    void showManager() {
        cout << "Manager ID: " << empID << ", Name: " << name << ", Bonus: " << bonus << endl;
    }
};
// Derived class – Protected Inheritance
class Intern : protected Employee {
private:
    double stipend;
public:
    Intern(int id, string n, double salary, double s)
        : Employee(id, n, salary) {
        stipend = s;
    }
    void showIntern() {
        cout << "Intern ID: " << empID << ", Name: " << name << ", Stipend: " << stipend << endl;
    }
};
int main() {
    Manager m1(101, "Alice", 50000, 10000);
    Intern i1(201, "Bob", 20000, 5000);
    m1.showManager();       
    m1.showSalary();         

    i1.showIntern();         

    return 0;
}
