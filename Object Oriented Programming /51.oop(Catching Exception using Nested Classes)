#include <iostream>
using namespace std;
class MyExceptions {  
public:    
    class DivideByZero {   
    public:
        void message() {
            cout << "Error: Division by zero!" << endl;
        }
    };

    void divide(int num1, int num2) {
        if (num2 == 0) {
            throw DivideByZero();  
                                
        }
        cout << "Result: " << num1 / num2 << endl;  
    }
};
int main() {
    MyExceptions handler; 
    int num1, num2;

    cout << "Enter two numbers: ";
    cin >> num1 >> num2;

    try {
        handler.divide(num1, num2);  
		   }
    catch (MyExceptions::DivideByZero& e) {  
        e.message();  
    }
    return 0;
}
